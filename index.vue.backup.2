                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
          `;
          document.body.appendChild(toastEl);
          
          // Animation and auto-removal
          setTimeout(() => {
            toastEl.style.opacity = '1';
            
            // Add click event to close button
            const closeBtn = toastEl.querySelector('button');
            if (closeBtn) {
              closeBtn.addEventListener('click', () => {
                toastEl.style.opacity = '0';
                setTimeout(() => toastEl.remove(), 300);
              });
            }
            
            // Auto-remove after 5 seconds
            setTimeout(() => {
              toastEl.style.opacity = '0';
              setTimeout(() => toastEl.remove(), 300);
            }, 5000);
          }, 10);
          
          console.error('Error uploading file:', errors);
        },
        onFinish: () => {
          uploadingFile.value = false;
        }
      }
    );
  } catch (error) {
    console.error('Error uploading file:', error);
    uploadingFile.value = false;
    showFileUploadDialog.value = false;
  }
}

// Add function to get file icon component
function getFileIconComponent(type: string) {
  switch (type) {
    case 'application/pdf':
      return FileText;
    case 'application/msword':
    case 'application/vnd.openxmlformats-officedocument.wordprocessingml.document':
      return FileText;
    case 'application/vnd.ms-powerpoint':
    case 'application/vnd.openxmlformats-officedocument.presentationml.presentation':
      return FileText;
    case 'image/jpeg':
    case 'image/png':
    case 'image/gif':
      return Image;
    default:
      return File;
  }
}

// Add function to get file type label
function getFileTypeLabel(type: string) {
  switch (type) {
    case 'application/pdf':
      return 'PDF';
    case 'application/msword':
    case 'application/vnd.openxmlformats-officedocument.wordprocessingml.document':
      return 'Word';
    case 'application/vnd.ms-powerpoint':
    case 'application/vnd.openxmlformats-officedocument.presentationml.presentation':
      return 'PowerPoint';
    case 'image/jpeg':
    case 'image/png':
    case 'image/gif':
      return 'Image';
    default:
      return 'File';
  }
}

function formatFileSize(bytes: number) {
  if (bytes === 0) return '0 Bytes';
  const k = 1024;
  const sizes = ['Bytes', 'KB', 'MB', 'GB'];
  const i = Math.floor(Math.log(bytes) / Math.log(k));
  return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
}

// Add method to open file in new tab
function openFileInNewTab(url: string) {
  const link = document.createElement('a');
  link.href = url;
  link.target = '_blank';
  link.rel = 'noopener noreferrer';
  link.click();
}

// Add this new method in the script section
function getFileIconByName(fileName: string) {
  const extension = fileName.split('.').pop()?.toLowerCase();
  
  switch (extension) {
    case 'jpg':
    case 'jpeg':
    case 'png':
    case 'gif':
    case 'webp':
      return Image;
    case 'pdf':
      return FileText;
    case 'doc':
    case 'docx':
      return FileText;
    case 'xls':
    case 'xlsx':
      return FileText;
    case 'ppt':
    case 'pptx':
      return FileText;
    default:
      return File;
  }
}
