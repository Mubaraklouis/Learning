  if (!editor.value) return 0;
  if (editor.value.isActive('heading', { level: 1 })) return 1;
  if (editor.value.isActive('heading', { level: 2 })) return 2;
  if (editor.value.isActive('heading', { level: 3 })) return 3;
  return 0;
});

